<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codeclan.com.rockpaperscissors">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.MainActivity"
            android:label="Choose your move!"
            android:parentActivityName=".controllers.HomePageActivity"
            />
        <activity android:name=".controllers.ResultActivity"
            android:label="The winner is !"
            android:parentActivityName=".controllers.MainActivity"
            ></activity>
    </application>

</manifest>